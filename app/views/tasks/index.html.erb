<h1>タスク一覧</h1>
<%= link_to '終了期限並び替え', tasks_path(sort_expired: "true") %>
<table border = '1'>
  <thead>
    <th>日時</th>
    <th>タイトル</th>
    <th>内容</th>
    <th>期限</th>
    <th>ステータス</th>
    <th>詳細</th>
    <th>編集</th>
    <th>削除</th>
  </thead>
  <tbody>
    <% @tasks.each do |form| %>
        <tr class="task_row">
          <td><%= form.daytime %></td>
          <td><%= form.title %></td>
          <td><%= form.content %></td>
          <td><%= form.endtime_at %></td>
          <td><%= form.status %></td>
          <td><%= link_to '詳細', task_path(form.id) %></td>
          <td><%= link_to '編集', edit_task_path(form.id) %></td>
          <td><%= link_to '削除', task_path(form.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'タスクを追加する', new_task_path %>