<!DOCTYPE html>
<html>
  <head>
    <title>ManyouChallenge</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class="header">
      <h1 class = "header_title">manyousama</h1>
      <div class="menu">
        <% if logged_in? %>
          <%= link_to 'Home', tasks_path, class: 'links' %>
          <%= link_to "Profile", user_path(current_user.id), class: 'links' %>
          <%= link_to "Logout", session_path(current_user.id), class: 'links', method: :delete %>
          <p>ユーザー名: <%= current_user.name %></p>
        <% else %>
          <%= link_to "Sign up", new_user_path, class: 'links' %>
          <%= link_to "Login", new_session_path, class: 'links' %>
        <% end %>
      </div>
    </header>
    <div class="content_area">
      <div class="notification">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>

  <body>
    <%= yield %>
  </body>
</html>
